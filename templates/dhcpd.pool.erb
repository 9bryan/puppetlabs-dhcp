#################################
# <%= name network mask %>
#################################
subnet <%= network %> netmask <%= mask %> {
  pool
  {
<% if failover != '' -%>
    failover peer "<%= failover %>";
<% end -%>
<% range.each do |r| -%>
    range <%= r %>;
<% end -%>
  }

  option subnet-mask <%= mask %>;
  option routers <%= gateway %>;
<% if options.is_a? Array -%>
<%   options.each do |opt| -%>
  option <%= opt %>;
<%   end -%>
<% elsif options != '' -%>
  option <%= options %>;
<% end -%>
}

